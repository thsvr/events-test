<% provide(:title, "Login") %>

<div class="d-flex flex-column">

  <div class="row">
    <h1 class="my-1 mx-5">Login</h1>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 my-5 mx-5">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "Login", class: "btn btn-primary my-5" %>
      <% end %>

      <p>New user? <%= link_to "Sign-up now!", signup_path %></p>
    </div>
  </div>
</div>

